@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Date Difference Calculator</h1>
    
</div>


@model Datediff.Models.DateViewModel

@{
    using (Html.BeginForm("OnSubmit", "DateDiff", FormMethod.Post))
    {


        <div class="row">
            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        From Date (dd/MM/yyyy):
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.FromDate)<br />
                        @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessageFor(m => m.FromDate).ToHtmlString()))
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="row">
                    <div class="col-md-12">
                        To Date (dd/MM/yyyy):
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        @Html.TextBoxFor(m => m.ToDate)<br/>
                        @Html.Raw(HttpUtility.HtmlDecode(Html.ValidationMessageFor(m => m.ToDate).ToHtmlString()))
                    </div>
                </div>
            </div>

        </div>
        <div class="row margin-top-10">
            <div class="col-md-4">
                <input type="submit" value="Submit" />
            </div>
        </div>
        <div class="row margin-top-10">
            <div class="col-md-12">
                @if (Model !=null && Model.TotalDays > 0)
                {
                    <label>Result :  @Html.DisplayFor(m => m.TotalDays) days</label>
                }

            </div>
        </div>


       
    }
}

